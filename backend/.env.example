# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL="mysql://user:password@localhost:3306/saashrm"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=8h

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_LOGOS=company-logos
AZURE_STORAGE_CONTAINER_CHAT=chat-files

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# SMTP (Email) - leave SMTP_USER and SMTP_PASS empty for dev (OTP logged to console)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="SaaS HRM <noreply@saashrm.com>"
